package filters

import "github.com/invopop/ctxi18n/i18n"

templ ClearFilters(url, target, swap string, disableFunc func() bool) {
	<button
		type="button"
		class="uk-button uk-button-default"
		hx-push-url="true"
		hx-get={ url }
		hx-target={ target }
		hx-swap={ swap }
		disabled?={ disableFunc() }
	>
		<span class="text-nowrap">{ i18n.T(ctx, "Clear.other") }</span><uk-icon hx-history="false" icon="filter-x" custom-class="h-5 w-5 ml-3" uk-cloack></uk-icon>
	</button>
}
